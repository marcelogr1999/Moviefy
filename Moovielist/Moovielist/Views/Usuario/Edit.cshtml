@model Moovielist.Models.ViewModel.EditarViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m._item.ItemID)
    @Html.HiddenFor(m => m._item.Livro.LivroID)
    @Html.HiddenFor(m => m._item.Livro.Livro_nome)
    
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m._item.Livro)
            </th>

        </tr>
        <tr>
            <td>
                @Html.DisplayFor(m => m._item.Livro.Livro_nome)
            </td>
        </tr>
    </table>

    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownListFor(p => Model.SelectedValue, Model.ItemsInDropDown)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

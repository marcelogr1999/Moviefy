@model Moovielist.Models.ViewModel.EditarViewModel

@{
    ViewBag.Title = "Add";
}

<h2>Adicionando</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model._item.Livro)
                </th>
            </tr>
            <tr>
                <td>
                    @Html.ViewBag.Livro
                </td>
            </tr>
        </table>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m._item.ItemID)
        @Html.HiddenFor(m => m._item.Livro.LivroID)
        @Html.HiddenFor(m => m._item.Livro.Livro_nome)
        <div class="form-group">
            <div class="col-md-10">
                <table class="table">
                    <tr>
                        <h4 style="padding-left:8px">Estado</h4>
                    </tr>
                    <tr>
                        <td style="padding-bottom:20px">
                            @Html.DropDownListFor(p => p.SelectedValue, Model.ItemsInDropDown)
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Adicionar" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para Lista", "Index")
</div>

@model Moovielist.Models.ViewModel.EditarViewModel

@{
    ViewBag.Title = "Add";
}

<h2>Adicionando</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Livro</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m._item.ItemID)
    @Html.HiddenFor(m => m._item.Livro.LivroID)
    @Html.HiddenFor(m => m._item.Livro.Livro_nome)
    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownListFor(p => p.SelectedValue, Model.ItemsInDropDown)
            


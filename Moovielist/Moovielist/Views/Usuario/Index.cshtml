@model IEnumerable<Moovielist.Models.Item>

@{
    ViewBag.Title = "Lista Pessoal";
}

<h2>Lista Pessoal</h2>

<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Livro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Livro.Livro_nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ItemID }) |
            @Html.ActionLink("Remover", "Delete", new { id = item.Livro.LivroID })
        </td>
    </tr>
}

</table>
